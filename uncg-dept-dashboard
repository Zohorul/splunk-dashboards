      <single>
        <search>
          <query>index=YOURINDEX sourcetype=YOURSOURCETYPE | search departmentnumber IN (*$departmentnumbers$*) | dedup login | eval quota= space_amount / 1024 / 1024 / 1024 | stats sum(quota)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
