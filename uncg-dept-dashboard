  <row>
    <panel>
      <title>DISTRIBUTION OF STORAGE</title>
      <single>
        <search>
          <query>index=YOURINDEX sourcetype=YOURSOURCETYPE | search departmentnumber IN (*$departmentnumbers$*) | dedup login | eval quota= space_amount / 1024 / 1024 / 1024, lclogin=lower(login), roundQuota=round(quota, 2)  | eval Quota_Range=case(quota=0,"0 GB",quota&lt;100,"1-99 GB",quota&lt;200,"100-199 GB",quota&lt;300,"200-299 GB",quota&gt;299,"300 GB +",1=1,"Should Never See This Just For Catching Exit Errors") | stats count by Quota_Range | sort Quota_Range</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">all</option>
        <option name="height">215</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
