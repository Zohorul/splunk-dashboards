<form theme="dark">
  <label>Storage - Box Depts</label>
  <description>Interactive dashboard based on Box data for departments.</description>
  <search id="base_search">
    <query>index=YOURINDEX sourcetype=YOURSOURCETYPE</query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="time">
      <label>Time</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="departmentnumbers">
      <label>Departments</label>
      <search>
        <query>index=YOURINDEX sourcetype=YOURSOURCETYPE | table departmentnumber | dedup departmentnumber | sort departmentnumber</query>
        <earliest>$time.earliest$</earliest>
        <latest>$time.latest$</latest>
      </search>
      <fieldForLabel>departmentnumber</fieldForLabel>
      <fieldForValue>departmentnumber</fieldForValue>
    </input>
  </fieldset>
  <row>
    <panel depends="$departmentnumbers$">
      <title>TOTAL STORAGE IN SPECIFIED DEPT ACCOUNT(S)</title>
      <single>
        <title>(Combined total if multiple depts selected)</title>
        <search>
          <query>index=YOURINDEX sourcetype=YOURSOURCETYPE | rex field=login "(?&lt;user&gt;\w+)" | search user IN (*$departmentnumbers$*) | eval quota=space_amount / 1024 / 1024 / 1024 | table quota | sort -_time | HEAD 1</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
