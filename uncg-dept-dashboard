  <row>
    <panel depends="$departmentnumbers$">
      <title>STORAGE TIMELINE FOR DEPT ACCOUNT(S)</title>
      <chart>
        <search>
          <query>index=YOURINDEX sourcetype=YOURSOURCETYPE | rex field=login "(?&lt;user&gt;\w+)" | search user IN (*$departmentnumbers$*) | bin _time span=1d | where space_amount &gt; 0 | eval gb_used = space_amount / 1024 / 1024 / 1024 | timechart max(gb_used) as quota by login | sort -quota</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
